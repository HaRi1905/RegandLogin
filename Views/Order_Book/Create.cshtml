@model RegandLogin.Models.Order_Book

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Order_Book</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
   

    <div class="form-group">
        <div class="col-md-offset-2">
            <label>User Id </label>
            <input type="text" name="User_Id" class="form-control" />
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.user_id, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2">
            <label>Book Name </label>
            <input type="text" name="Book_Name" class="form-control" />
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.Book_Name, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2">
            <label>Issue Date </label>
            <input type="date" name="Issue_Date" class="form-control" />
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.Issue_Date, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2">
            <label>Return Date </label>
            <input type="date" name="Return_Date" class="form-control" />
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.Return_Date, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Order" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
